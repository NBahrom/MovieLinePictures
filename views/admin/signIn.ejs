
<%- include('includes/header.ejs') %>



    <body class="login-page" style="min-height: 496.781px;">
        <div class="login-box">
            <div class="login-logo">
                <a href="/admin"><b>Admin</b></a>
            </div>
    
            <div class="card">
                <div class="card-body login-card-body">
                    <p class="login-box-msg">Заполните поля </p>
                    <form action="/admin/signIn" method="post">
                        <input name="_csrf" value="<%= csrfToken %>" type="hidden" >
                        <div class="input-group mb-3">
                            <input required type="email" name="email" class="form-control" placeholder="Email">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <input required type="password" name="password" class="form-control" placeholder="Пароль">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <!-- <div class="col-8">
                                <div class="icheck-primary">
                                    <input type="checkbox" id="remember">
                                    <label for="remember">
                                        Remember Me
                                    </label>
                                </div>
                            </div> -->
    
                            <div class="col-12 ">
                                <button type="submit" class="btn btn-primary btn-block ">Отправить</button>
                            </div>
    
                        </div>
                        
                    </form>
                    <!-- <div class="social-auth-links text-center mb-3">
                        <p>- OR -</p>
                        <a href="#" class="btn btn-block btn-primary">
                            <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
                        </a>
                        <a href="#" class="btn btn-block btn-danger">
                            <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
                        </a>
                    </div> -->
                    <p class="mt-3 text-center btn-danger">
                        <%= error[0]  %>
                    </p>
                    <p class="mt-3 text-center">
                        <a href="/forgot-password">Забыли пароль?</a>
                    </p>
                </div>
    
            </div>
        </div>
    
    
     
    </body>
    
